<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/transparent"
        android:layout_centerVertical="true"/>

    <View
        android:id="@+id/vertical_line"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:layout_centerHorizontal="true"/>

    <View
        android:id="@+id/yellow"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_below="@+id/horizontal_line"
        android:layout_toRightOf="@+id/vertical_line"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="105dp"
        android:alpha="0"
        android:background="@drawable/xiaoma_intro_img_yellow"/>

    <View
        android:id="@+id/green"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_toLeftOf="@+id/vertical_line"
        android:layout_below="@+id/horizontal_line"
        android:layout_marginRight="52dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/xiaoma_intro_img_green"/>

    <View
        android:id="@+id/deep_purple"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_toLeftOf="@+id/vertical_line"
        android:layout_below="@+id/horizontal_line"
        android:layout_marginRight="52dp"
        android:layout_marginTop="82dp"
        android:background="@drawable/xiaoma_intro_img_deep_purple"/>

    <View
        android:id="@+id/red"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_toLeftOf="@+id/vertical_line"
        android:layout_above="@+id/horizontal_line"
        android:layout_marginRight="52dp"
        android:layout_marginBottom="82dp"
        android:background="@drawable/xiaoma_intro_img_red"/>

    <View
        android:id="@+id/blue"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@+id/horizontal_line"
        android:layout_toLeftOf="@+id/purple"
        android:layout_marginTop="34dp"
        android:layout_marginRight="25dp"
        android:alpha="0"
        android:background="@drawable/xiaoma_intro_img_blue"/>

    <View
        android:id="@+id/purple"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_below="@+id/horizontal_line"
        android:layout_marginTop="34dp"
        android:alpha="0"
        android:layout_centerHorizontal="true"
        android:background="@drawable/xiaoma_intro_img_purple"/>

    <View
        android:id="@+id/orange"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_toLeftOf="@+id/vertical_line"
        android:layout_above="@+id/horizontal_line"
        android:layout_marginRight="52dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/xiaoma_intro_img_orange"/>

</RelativeLayout>