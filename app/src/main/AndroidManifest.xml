<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.willkernel.app.transitionapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.TransitionActivity" />
        <activity android:name=".activity.TransitionRedActivity" />
        <activity android:name=".activity.ContentTransitionActivity" />
        <activity
            android:name=".activity.TransitionSharedActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
    </application>

</manifest>